<h1><%=@the_user.username%></h1>

<dl>
  <dt>Private</dt>
  <%if @the_user.private == true%>
  <dd>true</dd>
  <%else%>
  <dd>false</dd>
   <%end%>
   <%@followers = FollowRequest.where({:recipient_id=>@the_user.id})%>
  <dt>Followers</dt>
  <dd><%=@followers.count%></dd>


 <%following = FollowRequest.where({:sender_id => @the_user.id})%>
    <dt>Following</dt>
  <dd><%=following.count%></dd>

<nav>
  <ul>
    <li>
      <a href="/users/<%=@the_user.username%>">Profile</a>
    </li>
    <li>
      <a href="/users/<%=@the_user.username%>/liked_photos">Liked photos</a>
    </li>
    <li>
      <a href="/users/<%=@the_user.username%>/feed">Feed</a>
    </li>
    <li>
      <a href="/users/<%=@the_user.username%>/discover">Discover</a>
    </li>
  </ul>
</nav>


<h2>Discover (<%=@photos.count%>)</h2>

<table border="1">
  <tr>
    <th>
      Image
    </th>

    <th>
      Owner
    </th>

    <th>
      Caption
    </th>

    <th>
      Posted
    </th>

    <th>
      Likes
    </th>

    <th></th>
  </tr>

   <%@photos.each do |photo|%>
  <tr>
  <td><img src="<%=photo.image%>"></td>
  <%owner = Photo.where({:id=> photo.owner_id})%>
  <%user = User.where({:id => owner})%>
  <td></td>
  <td><%= photo.caption%></td>
  <td><%= photo.created_at%></td>
  <td><%= photo.likes_count%></td>
  <td>   <a href="/photos/">
          Show details
        </a></td>
  </tr>
<%end%>
